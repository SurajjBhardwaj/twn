<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Details</title>
  <!-- Add your stylesheets and other head elements here -->
</head>
<style>
    body{
        background: #000;
    }

    a{
        color: antiquewhite;
    }

    p{
        color: aliceblue;
    }

    h2{
        color: aliceblue;
    }
</style>
<body>

  <% if (data.product) { %>

    <div class="product-details">
      <h2>Product Details</h2>
      
     
    <img  style="width: 500px; height: auto;" src="data:<%= data.product.image.contentType %>;base64, <%= data.product.image.data.toString('base64') %> " alt="<%= data.product.bookName %>">       
    <center>
      <p>Name: <%= data.product.bookName %></p>
      <p>Title: <%= data.product.tittle %></p>
      <p>About: <%= data.product.about %></p>
    </center>
    </div>

  <% } else { %>
    <p>User or product not found</p>
  <% } %>


</body>

<script>
    let s = document.getElementById("loader");
    window.addEventListener("load", () => {

        s.style.display = "none";
